/* pages/profile/profile.wxss */
@import "/template/login/index.wxss";
page,view,image,input {
  display: block;
  box-sizing: border-box;
}

.profile {
    height: 100%;
    overflow: hidden;
    overflow-y: hidden;
    /* background: #f8f8f8; */
}
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
  width: 750rpx;
}
.sign{
  width: 100%;
  display: flex;
}
.signImg{
  width: 60rpx;
  height: 60rpx;
  margin-left:20rpx
}
.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}
.userinfo-btn{
  margin-bottom: 20rpx;
  font-size: 14px;
}
.asset {
  display: flex;
  border-top: 1px solid #eee;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.asset .item {
  display: flex;
  flex-direction: column;
  width:187rpx;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  color:#333;
}
.asset .right {
  border-left: 1px solid #eee;
}

/*---------------- header ------------------------*/
.menu-item {
  width: 100vw;
  height: 104rpx;
  padding: 0 32rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu-item .l {
  font-size:34rpx;
  color:#333;
  line-height:104rpx;
}
.menu-item .next {
  width: 40rpx;
  height: 40rpx;
}
.space {
  width: 100vw;
  height: 16rpx;
  background: #F4F5F9;
}
.line {
  width:718px;
  height:1px;
  background:#EEEEEE;
  margin-left: 32rpx;
}