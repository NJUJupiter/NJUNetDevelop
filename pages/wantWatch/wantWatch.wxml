 <view class="page">
  <block wx:if="{{showLoading}}">
      <view class="page-loading">
        <image class="loading-img" src="../../images/loading.gif" />
        <text>玩命加载中...</text>
      </view>
    </block>
  <block wx:else>
    <scroll-view style="height:1100px;" scroll-y="{{true}}" scroll-top="0" 
    bindscrolltolower="handleScrollToLower">
      <block wx:for="{{list}}" wx:key="{{index}}">
        <view class="list" data-id="{{item.id}}" bindtap="handleRedirect">
          <view class="left">
            <image src="{{item.imgUrl}}" />
          </view>
          <view class="middle">
            <view class="row row-title">
              {{item.movieName}}
            </view>
            <view class="row row-content">
              评分：{{item.score}}
            </view>
            <view class="row row-content">
              导演：<view wx:for="{{item.director}}" wx:for-item="director" wx:key="{{index}}">
                {{director}}
              </view>
            </view>
            <view class="row row-content">
              主演：{{item.actors}}
            </view>  
          </view>
          <view class="right right-content">
            <text>{{item.likes}}人喜欢</text>
            <button class="right-content-btn" bindtap="handleWachted">看过</button>   
          </view>
        </view>
      </block>
      
      <block wx:if="{{showMore}}">
        <view class="page-loading">
            <image class="loading-img" src="../../images/loading.gif" />
            <text>玩命加载中...</text>
          </view>
      </block>
      <block wx:else>
        <view class="page-loading">
           <text>没有更多内容了</text> 
        </view>
      </block>
    </scroll-view>
  </block>    
 </view>
 